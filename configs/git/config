[credential]
	helper = cache
[gpg]
	;program = /mnt/c/Program Files (x86)/gnupg/bin/gpg.exe
  ;program = gpg
[commit]
  gpgsign = true
[tag]
  gpgsign = true
[core]
  pager = delta
	editor = nvim
[delta]
	features = side-by-side line-numbers decorations
	navigate = true
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[diff]
	algorithm = patience
	compactionHeuristic = true
	tool = nvimdiff

[difftool]
        prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[difftool "nvimdiff"]
	; cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
	cmd = nvr --servername $(nvim-server-name) -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
[merge]
	tool = nvimdiff4
	prompt = false
[mergetool "nvimdiff4"]
	; cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
	cmd = nvr --servername $(nvim-server-name) -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
 
[alias]
        dlogtastic = -c diff.external=difft log -p --ext-diff
        dlog = log -p --ext-diff
        ll = log --oneline
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        a = commit --amend
        cm = commit -m
        co = checkout
        cob = checkout -b
        discard = reset HEAD --hard
        unstage = reset HEAD --
        s = status
        diff-stat = diff --stat --ignore-space-change -r
[url "git@github.com:"]
	insteadOf = https://github.com/
